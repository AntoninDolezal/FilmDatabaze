@model Filmoteka.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.Name</h2>

<table class="table table-bordered table-hover">
    <tbody>
        <tr>
            <td><strong>Genre: </strong>@Model.Genre.Name</td>
        </tr>
        <tr>
            <td><strong>Date Added:</strong> @Model.DateAdded.ToShortDateString()</td>
        </tr>
        <tr>
            <td><strong>Description:</strong> @Model.Description</td>
        </tr>
    </tbody>
</table>
